#!/bin/bash
if [ -z ${1} ]; then
   echo "Provide the prefix of the environment as a parameter. Example: suma-32"
   exit 1
fi

echo "revert snapshot with prefix $1"

for i in `sudo virsh list --name | grep $1`; do sudo virsh shutdown --domain $i ; done

for i in `sudo virsh list --all --name | grep $1`; do sudo virsh snapshot-revert --domain $i --snapshotname "${i}-snapshot" --running; done

echo "done"

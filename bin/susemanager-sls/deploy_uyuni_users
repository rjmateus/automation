#!/bin/bash

echo "deploy files from  $1 to server $2"

echo "copy files"
scp $1/_modules/uyuni_users.py $2:/usr/share/susemanager/salt/_modules/

scp $1/_states/uyuni_users.py $2:/usr/share/susemanager/salt/_states/

#scp $1/_utils/* $2:/usr/share/susemanager/salt/_utils/

echo "deploy modules to all minions"
ssh $2 "salt '*' saltutil.sync_modules"
echo "deploy states to all minions"
ssh $2 "salt '*' saltutil.sync_states"
#echo "deploy utils to all minions"
#ssh $2 "salt '*' saltutil.sync_utils"

echo "refresh pillar data"
ssh $2 "salt '*' saltutil.refresh_pillar"

echo "all done"
